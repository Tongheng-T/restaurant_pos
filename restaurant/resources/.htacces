
# អនុញ្ញាតឲ្យ access តែឯកសារដែលចង់បាន
<FilesMatch "^(a\.php|payqr\.php|posl\.js|orderlisl\.js|dom-to-image\.js)$">
    Require all granted
</FilesMatch>

# បិទ access ទៅឯកសារផ្សេងទៀត
<Files "*">
    Require all denied
</Files>

# បើ 404 → ចូលទៅ indexx.php
ErrorDocument 404 /ui/indexx.php

# Enable rewrite
RewriteEngine On

# បើឯកសារ ឬថតមាន → បន្តទៅវា
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise ទៅ index.php (ជំនួស index.html)
RewriteRule ^ index.html [L]
